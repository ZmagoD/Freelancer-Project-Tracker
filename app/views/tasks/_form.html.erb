<div class="container">
  <div class="row text-center">
    <div class="btn-group" role="group">
      <%= link_to "Back to project", project_path(@project), class: "btn btn-default" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="well">
        <% if @task.new_record? %>
        <h1>New Task</h1>
        <% else %>
        <h1>Edit Task</h1>
        <% end %>
        <hr>
        <%= bootstrap_form_for([@project, @task]) do |f| %>
          <%= f.text_field :name, label_class: "required" %>
          <%= f.text_area :description, class: "tinymce", rows: 20, cols: 12 %>
          <%= f.text_field :set_due_date, class: 'datepicker', label_class: "required", value: @task.set_due_date, id: "due_date_picker"  %>
          <%= f.select :set_status, task_stauses, { class: "selectpicker" }, label_class: "required" %>
          <%= f.submit (@task.new_record? ? "Add task to project #{@project.name}" : "Update task")%>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= tinymce %>