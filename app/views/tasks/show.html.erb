<div class="container">
  <div class="jumbotron">
    <div class="page-header">
      <i>TASK:</i>
      <h1><%= @task.name %></h1>
      <hr />
      <div class="row text-center">
        <div class="col-md-6">
          <h3>Due date:</h3>
          <p><%= @task.due_date.strftime("on %m/%d/%Y")  %></p>
        </div>
        <div class="col-md-6">
          <h3>Status:</h3>
          <p><%= @task.status.humanize  %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3>Description</h3>
      <hr />
      <%= @task.description.html_safe %>
      <hr />
    </div>
  </div>
  <div class="btn-group" role="group">
    <%= link_to "Back to project", project_path(@project), class: "btn btn-default" %>
    <%= link_to "Edit task", edit_project_task_path(@project, @task), class: "btn btn-default" %>
  </div>
</div>
