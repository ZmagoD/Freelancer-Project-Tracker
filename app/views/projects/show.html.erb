<div class="container">
  <div class="row text-center">
    <div class="btn-group" role="group">
      <%= link_to "Back to projects", projects_path, class: "btn btn-default" %>
      <%= link_to "Edit project", edit_project_path(@project), class: "btn btn-default" %>
    </div>
  </div>
  <div class="jumbotron">
    <div class="page-header">
      <i>PROJECT:</i>
      <h1><%= @project.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="well">
        <h3 class="text-center">Expenses</h3>
        <div class="text-center">
          <%= link_to 'New expense', new_project_expense_path(@project), class: 'btn btn-info' %>
        </div>
        <hr>
        <ul class="list-group">
          <% @expenses.each do |expense| %>
            <li class="list-group-item">
              <%= expense.amount %> EUR added <%= expense.created_at.strftime("on %m/%d/%Y") %>
              <%= link_to edit_project_expense_path(@project, expense), class: "pull-right" do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            </li>
          <% end %>
          <li class="list-group-item disabled">
            Total: <%= @project.expenses.sum(:amount) %> EUR
          </li>
        </ul>
        <%= will_paginate @expenses %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h3 class="text-center">Tasks</h3>
        <div class="text-center">
          <%= link_to 'New task', new_project_task_path(@project), class: 'btn btn-info' %>
        </div>
        <hr>
        <ul class="list-group">
          <% @tasks.each do |task| %>
            <li class="list-group-item">
              <%= link_to task.name, project_task_path(@project, task) %>
              <span class="pull-right">
                <span class="label label-info"><%= task.status.humanize %></span>
              <%= link_to edit_project_task_path(@project, task) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
              </span>
            </li>
          <% end %>
        </ul>
        <%= will_paginate @tasks %>
      </div>
    </div>
  </div>
</div>
